{
  "name": "@solahidris/ui",
  "version": "1.0.0",
  "description": "A beautiful React UI library featuring interactive 3D card components with holographic effects",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "babel src --out-dir dist --extensions .js,.jsx",
    "build:esm": "babel src --out-dir dist --out-file-extension .esm.js --extensions .js,.jsx",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "ui",
    "components",
    "3d",
    "card",
    "holographic",
    "interactive",
    "animation",
    "spring"
  ],
  "author": "solah",
  "license": "MIT",
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.0",
    "@babel/preset-react": "^7.23.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/solah/solcn-ui.git"
  },
  "bugs": {
    "url": "https://github.com/solah/solcn-ui/issues"
  },
  "homepage": "https://github.com/solah/solcn-ui#readme"
}

